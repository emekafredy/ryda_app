<div class="new-request-wrapper">
  <p id="notice"><%= notice %></p>

  <div class="profile-wrapper">
    <div>
      <hr/>
        <h3 class="text-center"><em>My Profile</em></h3>
      <hr/>
      <div class="card my-profile-card">
        <img
          class="card-img-top image-size" src="<%= @user.image %>"
          alt="profile img"
        />
        <div class="card-body">
          <h4 class="card-title text-center"> <%= @user.first_name %> <%= @user.last_name %>  </h4>
          <ul class="list-inline text-center" id="courses">
            <li class="list-inline-item"> <i class="fa fa-user"></i> user </li>
          </ul> <hr/>
          <div class="address">
            <ul class="list-group">
              <li class="list-group-item">
                <p class="profile-details-key"> Email Address </p>
                <span class="profile-details-value"> <%= @user.email %> </span>
              </li>
              <li class="list-group-item">
                <p class="profile-details-key"> Mobile Phone </p>
                <span class="profile-details-value">
                  <%= form_for(@user, as: 'user', url: update_phone_number_path(@user), html: { method: :put }) do |form| %>
                    <%= form.number_field :phone_number, :class => "my-number-form-control", value: @user.phone_number %>
                    <hr>
                    <%= form.button "Save Changes", :class => "btn btn-primary text-center" do %>
                      Save Changes <span></span> <i class="fa fa-pencil fa-lg"></i>
                    <% end %>
                  <% end %>
                </span>
              </li>
            </ul>  <hr/>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
