<!DOCTYPE html>
<html>
  <head>
    <title>RydaApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p> -->
    <nav class="navbar navbar-light bg-light my-navbar">
      <a class="navbar-brand ryda-brand" href="<%=root_path%>">
        RYDA APP
        <img class="brand-tyre" src="https://rukminim1.flixcart.com/image/704/704/jj7givk0/two-wheeler-tyre/y/h/r/120-80-16-60p-tubeless-bike-tyre-nylogrip-zapper-kurve-mrf-original-imaf5csmsvfguhqw.jpeg?q=70" alt="">
      </a>
      <div class="float-right navbar-expand-sm">
        <% if user_signed_in? %>
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                <%= current_user.first_name %>
                <%= current_user.last_name %>
                <img src="<%= current_user.image %>" alt="" class="profile-image">
              </a>
              <div class="dropdown-menu text-center">
                <%= link_to('Offer Ride', new_offer_path, :class => "dropdown-item dropdown-nav-link") %>
                <%= link_to('Request Ride', new_request_path, :class => "dropdown-item dropdown-nav-link") %>
                <hr>
                <%= link_to('Logout', destroy_user_session_path, method: :delete, :class => "dropdown-item dropdown-nav-link") %>
              </div>
            </li>
          </ul>
        <%end%>
      </div>
    </nav>
      <%= yield %>
    <footer class="footer-class text-center">
      <p> &copy; <em>Ryda App</em> , 2019 </p>
    </footer>
  </body>
</html>
