                    <path d="M0,192v-192h192v192z" fill="none"></path>
                    <g id="Слой_1" fill="#ce0058">
                      <path d="M96,174c-43.011,0 -78,-34.989 -78,-78c0,-43.011 34.989,-78 78,-78c43.011,0 78,34.989 78,78c0,43.011 -34.989,78 -78,78zM96,24c-39.699,0 -72,32.301 -72,72c0,39.699 32.301,72 72,72c39.699,0 72,-32.301 72,-72c0,-39.699 -32.301,-72 -72,-72z"></path><path d="M96,156c-33.084,0 -60,-26.916 -60,-60c0,-33.084 26.916,-60 60,-60c33.084,0 60,26.916 60,60c0,33.084 -26.916,60 -60,60zM96,42c-29.775,0 -54,24.225 -54,54c0,29.775 24.225,54 54,54c29.775,0 54,-24.225 54,-54c0,-29.775 -24.225,-54 -54,-54z"></path><path d="M126,75c0,1.656 -1.344,3 -3,3h-54c-1.656,0 -3,-1.344 -3,-3v-6c0,-1.656 1.344,-3 3,-3h54c1.656,0 3,1.344 3,3z"></path><path d="M126,99c0,1.656 -1.344,3 -3,3h-54c-1.656,0 -3,-1.344 -3,-3v-6c0,-1.656 1.344,-3 3,-3h54c1.656,0 3,1.344 3,3z"></path><path d="M126,123c0,1.656 -1.344,3 -3,3h-54c-1.656,0 -3,-1.344 -3,-3v-6c0,-1.656 1.344,-3 3,-3h54c1.656,0 3,1.344 3,3z"></path></g>
                    </g>
                </svg>
              </a>
              <div class="dropdown-menu menu-dropdown-div">
                <%= link_to('Available Rides', offers_all_path, :class => "dropdown-item dropdown-nav-link link-margin-color") %>
                <hr>
                <%= link_to('My Offers', offers_path, :class => "dropdown-item dropdown-nav-link link-margin-color") %>
                <%= link_to('My Requests', requests_path, :class => "dropdown-item dropdown-nav-link link-margin-color") %>
                <hr>
                <% if (!@offer_exists && !@request_exists) %>
                  <%= link_to('Offer Ride', new_offer_path, :class => "dropdown-item dropdown-nav-link link-margin-color") %>
                  <%= link_to('Request Ride', new_request_path, :class => "dropdown-item dropdown-nav-link link-margin-color") %>
                  <hr>
                <% end %>
                <%= link_to('Matches', offers_ride_matches_path, :class => "dropdown-item dropdown-nav-link link-margin-color") %>
                <%= link_to('Booked Ride', offers_my_booked_ride_path, :class => "dropdown-item dropdown-nav-link link-margin-color") %>
                <hr>
                <%= link_to('Completed Offers', completed_offers_path, :class => "dropdown-item dropdown-nav-link link-margin-color") %>
                <%= link_to('Completed Requests', completed_requests_path, :class => "dropdown-item dropdown-nav-link link-margin-color") %>
              </div>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                <%= current_user.first_name %>
                <%= current_user.last_name %>
                <img src="<%= current_user.image %>" alt="" class="profile-image">
              </a>
              <div class="dropdown-menu text-center">
                <%= link_to('Logout', destroy_user_session_path, method: :delete, :class => "dropdown-item profile-dropdown-nav-link") %>
              </div>
            </li>
          </ul>
        <%end%>
      </div>
    </nav>
      <%= yield %>
    <footer class="footer-class text-center">
      <p> &copy; <em>Ryda App</em> , 2019 </p>
    </footer>
  </body>
</html>
